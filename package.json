{
	"name": "@witchcraft/nuxt-postgres",
	"version": "0.0.1",
	"description": "Nuxt module for logging.",
	"repository": "witchcraftjs/nuxt-postgres",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"//exports": {
		"./drizzleConfig.js": "Special case for drizzle. See the file for more details."
	},
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./*": {
			"types": "./dist/runtime/*.d.ts",
			"import": "./dist/runtime/*.js",
			"require": "./dist/runtime/*.ts"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"prepare": "husky && cd playground && pnpm i",
		"build": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'pnpm nuxt-module-build prepare && pnpm nuxt-module-build build && pnpm nuxi build playground'",
		"build:only": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'pnpm nuxt-module-build build'",
		"dev": "nuxi dev playground",
		"dev:prepare": "cross-env-shell DISABLE_POSTGRES_ENSURE_ENV=true 'pnpm nuxt-module-build build --stub && pnpm nuxt-module-build prepare && pnpm nuxi prepare playground'",
		"lint": "eslint \"{src,test,playground/app}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"lint:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
		"test": "echo no tests yet",
		"test:watch": "vitest watch"
	},
	"@comments": {
		"dependencies": {
			"pglite": "This is because of https://github.com/electric-sql/pglite/issues/603 and also was getting some errors about unreachable wasm when not getting this error."
		}
	},
	"dependencies": {
		"@alanscodelog/tsconfigs": "^6.2.0",
		"@alanscodelog/utils": "^6.0.1",
		"@electric-sql/pglite": "~0.2.17",
		"@nuxt/kit": "^4.0.3",
		"@witchcraft/nuxt-logger": "^0.0.2",
		"@witchcraft/nuxt-utils": "^0.3.2",
		"defu": "latest",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"postgres": "^3.4.7",
		"unstorage": "^1.17.0",
		"vite-plugin-top-level-await": "^1.6.0",
		"vite-plugin-wasm": "^3.5.0",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "^6.3.1",
		"@alanscodelog/semantic-release-config": "^5.0.4",
		"@nuxt/eslint-config": "^1.9.0",
		"@nuxt/module-builder": "^1.0.2",
		"@nuxt/schema": "^4.0.3",
		"@nuxt/test-utils": "^3.19.2",
		"@types/node": "latest",
		"changelogen": "^0.5.7",
		"cross-env": "^10.0.0",
		"eslint": "^9.34.0",
		"husky": "^9.1.7",
		"nuxt": "^4.0.3",
		"typescript": "~5.9.2",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.6"
	},
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
